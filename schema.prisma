datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Question {
    id Int @id @default(autoincrement())
    title String
    description String
    modals Modals[]
    type String
    choices String[]
    answer String
    difficulty Int
    responses Response[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Response {
    id Int @id @default(autoincrement())
    response String
    grade Boolean
    question Question @relation(fields: [questionId], references: [id])
    questionId Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Modals {
    id Int @id @default(autoincrement())
    description String[]
    question Question @relation(fields: [questionId], references: [id])
    questionId Int
}